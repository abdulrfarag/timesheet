<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Timesheet!:</h3>

    <form class="form new-timesheet-form">
      <div class="form-group">
        <label for="timesheet-name">timesheet belong:</label>
        <input class="form-input" type="text" id="timesheet-name" name="timesheet-name" />
      </div>
      <div class="form-group">
        <label for="timesheet-funding">add timesheets ($):</label>
        <input class="form-input" type="number" id="timesheet-funding" name="timesheet-funding" />
      </div>
      <div class="form-group">
        <label for="timesheet-desc">description:</label>
        <textarea class="form-input" id="timesheet-desc" name="timesheet-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if timesheets.length}}
  <div class="col-md-6 timesheet-list">
    <h3>Current timesheets:</h3>

    {{#each timesheets as |timesheet|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/timesheet/{{timesheet.id}}">{{timesheet.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{timesheet.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
